extends ../layouts/default-layout.pug
block content
  mixin iconItem(title,p)
    .col-lg-4
      .features-icons-item.mx-auto.mb-0.mb-lg-3
        .features-icons-icon.d-flex
          i.i.fa.fa-book.m-auto.text-dark
        h3= title
        p.lead.mb-0= p
    mixin showCaseEven(src,title,p)
      section
        .container
          .row.align-items-center
            .col-lg-6.order-lg-1
              .p-5
                img.img-fluid.rounded-circle(src= src, alt='')
            .col-lg-6.order-lg-2
              .p-5
                h2.display-4= title
                p= p
      section
    mixin showCase(src,title,p)
      section
        .container
          .row.align-items-center
            .col-lg-6.order-lg-2
              .p-5
                img.img-fluid.rounded-circle(src= src, alt='')
            .col-lg-6.order-lg-1
              .p-5
                h2.display-4= title
                p= p
      section
    mixin people(src,tile,p)
      .col-lg-4
        .testimonial-item.mx-auto.mb-5.mb-lg-0
          img.img-fluid.rounded-circle.mb-3(src= src, alt='')
          h5= tile
          p.font-weight-light.mb-0= p
  // Slider
  #slides.carousel.slide(data-ride='carousel')
    ul.carousel-indicators
      li.active(data-target='#slides', data-slide-to='0')
      li(data-target='#slides', data-slide-to='1')
      li(data-target='#slides', data-slide-to='2')
    .carousel-inner
      .carousel-item.active
        img(src='assets/images/1.jpg', alt='')
        .carousel-caption
          h1.display-2 Bootstrap
          button.btn.btn-outline-light.btn-lg(type='button')
            | View Demo
          button.btn.btn-primary.btn-lg(type='button')
            | Get Started
      .carousel-item
        img(src='assets/images/2.jpg', alt='')
      .carousel-item
        img(src=src='assets/images/3.jpg', alt='')


  // Icons Grid
  section.features-icons.bg-light.text-center
    .container
      .row
        +iconItem("Bootstrap 4 Ready","Featuring the latest build of the new Bootstrap 4 framework!")
        +iconItem("Easy to Use","Ready to use with your own content, or customize the source files!")
        +iconItem("Css3 ","Ready to use with your own content, or customize the source files!")
        
  // Image Showcases
